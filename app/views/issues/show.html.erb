<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @issue.title %>
</p>

<p>
  <b>Category:</b>
  <%= @issue.category %>
</p>

<p>
  <b>Description:</b>
  <%= @issue.description %>
</p>

<!-- display comments -->
<h2>Comments</h2>
<div id="comments">
<%= render :partial => @issue.comments.reverse %>
</div>

<!-- adding comments -->
<%= form_for [@issue, Comment.new] do |f| %> 
	<p>
    <%= f.label :body, "New Comment" %><br />
	<%= f.text_area :body %> </p>
  	<p><%= f.submit "Add Comment" %></p>
<% end %>

<%= link_to 'Edit', edit_issue_path(@issue) %> |
<%= link_to 'Back', issues_path %>
